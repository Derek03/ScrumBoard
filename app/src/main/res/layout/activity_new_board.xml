<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="project.scrumboard.NewBoardActivity"
        android:background="@color/backblue">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:textColor="@color/black"
            android:id="@+id/square"
            android:layout_margin="30dp"
            android:background="@color/lightblue" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="State (column)"
            android:textColor="@color/black"
            android:id="@+id/StateText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+"
            android:id="@+id/addState"
            android:layout_below="@+id/StateText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            style="@style/Base.TextAppearance.AppCompat.Headline"
            android:background="@color/buttonblue"
            android:textColor="#ffffff"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Category (row)"
            android:textColor="@color/black"
            android:id="@+id/CategoryText"
            android:layout_below="@+id/addState"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+"
            android:id="@+id/addCategory"
            android:layout_below="@id/CategoryText"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            style="@style/Base.TextAppearance.AppCompat.Headline"
            android:background="@color/buttonblue"
            android:textColor="#ffffff" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="@string/plus"
            android:tag='Add'
            android:textSize="30dp"
            android:id="@+id/add"
            android:background="@color/buttonblue"
            android:layout_alignBottom="@+id/square"
            android:layout_alignRight="@+id/addCategory"
            android:layout_alignEnd="@+id/addCategory"
            android:layout_marginBottom="20dp" />

    </RelativeLayout>